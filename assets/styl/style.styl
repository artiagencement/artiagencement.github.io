@require 'vendor/_normalize'

/*
 * Mixins
 */

clearfix()
  content ""
  display table
  clear both

/*
 * Common
 */

body
  background url("../img/bg.jpg") no-repeat center fixed
  background-size cover

p, h1, h2, h3, h4, h5, h6, a
  font-family Calbri, arial, sans-serif
  color #ffffff

h1
  text-align center

#site_wrapper
  width 1014px
  margin auto

header
  float right
  width 700px
  
  margin-top 10px

  img
    display block
    margin auto

nav
  clearfix()
  float left
  width 284px

  margin-top 10px

  background-color #2c2c2c

  ul
    padding 0
    margin 0

    list-style none

    li
      a
        display block
        width 100%
        height 50px

        padding-right 20px
        box-sizing border-box

        line-height 50px
        text-align right
        text-decoration none
        font-size 20px

        &:hover, &:active
          background-color #4c4c4c

        &#current
          background-color #7d7d7d

footer
  float left
  width 100%
  height 30px

  margin-top 10px

  line-height 30px

  background-color #2c2c2c

  p
    margin 0

    text-align center

section#content
  float right
  width 700px

  margin-top 10px
  padding 10px
  box-sizing border-box

  font-size 17px

  background-color #2c2c2c

/*
 * Pages
 */

#home
  h2
    font-size 15px

  #gallery_overview 
    img 
      display block
      float left

      margin-right 10px

      &:nth-child(3n) 
        margin-right 0
      

      &:nth-child(n+4) 
        margin-top 10px

    &:after 
      clearfix()

#photos-realisations 
  #gallery 
    h2
      clearfix()
      display block
      text-align center

    .container 
      display block
      float left
      width 220px
      height 170px

      margin-right 5px

      text-align center  // Horizontal center
      line-height 170px  // Vertical center

      background-color #4c4c4c

      &:nth-of-type(n+4) 
        margin-top 10px

      img 
        vertical-align middle